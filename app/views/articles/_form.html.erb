<% if @article.errors.any? %>
  <%= t('common.errors') %>
  <ul>
    <% @article.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @article, html: { multipart: true } do |f| %>
    <p>
    <%= f.label :category, 'Category' %><br />
    <%= f.text_area :category %>
  </p>
  <p>
    <%= f.label :title, 'Title:' %><br />
    <%= f.text_field :title %>
  </p>
  <p>
  <%= f.label :preview, 'Preview:' %><br />
  <%= f.text_field :preview %>
</p>
    <p>
  <%= f.label :img, 'Related picture:' %><br />
  <%= f.file_field :img %>
</p>

  <p>
    <%= f.label :body, 'Main text:' %><br />
    <%= f.text_area :body %>
  </p>

  <p><%= f.submit 'Save' %> | <%= link_to 'Cancel', articles_path %></p>
<% end %>